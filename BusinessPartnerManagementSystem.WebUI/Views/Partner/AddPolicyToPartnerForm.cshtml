@model BusinessPartnerManagementSystem.WebUI.ViewModels.PartnerPolicy

@{
    ViewBag.Title = "AddPolicyToPartnerForm";
}

<h2>AddPolicyToPartnerForm</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Add Policy for @Model.Partner.FirstName</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Available Policies:
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedPolicy, new SelectList(Model.Policies, "Name", "Name"), new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
